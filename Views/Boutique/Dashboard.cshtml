@{
    ViewBag.Title = "Dashboard";
}
<div class="container mt-5">
    <h2>Dashboard</h2>
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card shadow-sm p-3">
                <h5>Total Items</h5>
                <h3>@ViewBag.TotalItems</h3>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm p-3">
                <h5>Rental Items</h5>
                <h3>@ViewBag.TotalRentals</h3>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm p-3">
                <h5>Sales Items</h5>
                <h3>@ViewBag.TotalSales</h3>
            </div>
        </div>
    </div>
    <h4 class="mt-5">Most Popular Items</h4>
    <div class="row">
        @foreach (var item in ViewBag.MostPopular)
        {
            <div class="col-md-3 mb-3">
                <div class="card shadow-sm">
                    <img src="@item.ImageUrl" class="card-img-top" style="height:180px;object-fit:cover;">
                    <div class="card-body">
                        <h5>@item.Name</h5>
                        <small>Code: @item.ItemCode</small>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
