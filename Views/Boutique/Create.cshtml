@model BoutiqueManagement.Models.BoutiqueItem
@{
    ViewBag.Title = "Add Item";
}

<div class="container mt-5" style="max-width:600px;">
    <h3>Add New Item</h3>
    <form asp-action="Create" method="post" enctype="multipart/form-data" class="mt-3">
        <div class="mb-3">
            <input asp-for="Name" class="form-control" placeholder="Item Name" required />
        </div>
        <div class="mb-3">
            <input asp-for="ItemCode" class="form-control" placeholder="Unique Item Code (e.g. 1234)" required />
        </div>
        <div class="mb-3">
            <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories">
                <option value="">Select Category</option>
            </select>
        </div>
        <div class="mb-3">
            <input asp-for="RentalPrice" class="form-control" placeholder="Rental Price" type="number" min="0" required />
        </div>
        <div class="mb-3">
            <input type="file" name="imageFile" class="form-control" accept="image/*" required />
        </div>
        <div class="form-check mb-3">
            <input asp-for="IsRental" class="form-check-input" type="checkbox" />
            <label class="form-check-label">Is Rental Item?</label>
        </div>
        <button type="submit" class="btn btn-primary w-100">Save Item</button>
    </form>
</div>
